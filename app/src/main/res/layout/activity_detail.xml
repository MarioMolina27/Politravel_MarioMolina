<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fondo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="41dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgDetailTrip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearance="@style/SpecificCorner" />

            <TextView
                android:id="@+id/txtTripNameDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/lexendexa_black"
                android:text="Italia"
                android:textColor="@color/black"
                android:textSize="40dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgDetailTrip" />

            <ImageView
                android:id="@+id/clockDetail"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:src="@drawable/clock"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtTripNameDetail" />

            <TextView
                android:id="@+id/tempsDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/lexendex_light"
                android:text="5 dies"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintLeft_toRightOf="@id/clockDetail"
                app:layout_constraintTop_toBottomOf="@+id/txtTripNameDetail" />

            <ImageView
                android:id="@+id/point1Detail"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/point"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clockDetail" />

            <View
                android:id="@+id/line1Detail"
                android:layout_width="87dp"
                android:layout_height="4dp"
                android:layout_marginTop="52dp"
                android:background="@color/black"
                app:layout_constraintLeft_toRightOf="@+id/point1Detail"
                app:layout_constraintTop_toBottomOf="@+id/clockDetail" />

            <ImageView
                android:id="@+id/imgTransport"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="42dp"
                android:src="@drawable/plane"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tempsDetail" />

            <View
                android:id="@+id/line2Detail"
                android:layout_width="87dp"
                android:layout_height="4dp"
                android:layout_marginTop="52dp"
                android:background="@color/black"
                app:layout_constraintEnd_toStartOf="@+id/point2Detail"
                app:layout_constraintTop_toBottomOf="@+id/clockDetail" />
            <ImageView
                android:id="@+id/point2Detail"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="40dp"
                android:src="@drawable/point"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clockDetail" />

            <TextView
                android:id="@+id/txtIniciViatje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="8dp"
                android:text="Inici"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/point1Detail" />

            <TextView
                android:id="@+id/txtFinalViatje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="42dp"
                android:text="Final"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/point1Detail" />

            <TextView
                android:id="@+id/txtTitleDescrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/lexendex_light"
                android:text="DESCRIPCIÃ“ PAQUET"
                android:textColor="@color/lapis_lazuli"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtIniciViatje" />

            <TextView
                android:id="@+id/txtDescripcioDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/lexendex_light"
                android:text=""
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtTitleDescrip" />

            <TextView
                android:id="@+id/txtTitleItinerari"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/lexendex_light"
                android:text="Itinerari"
                android:textColor="@color/lapis_lazuli"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtDescripcioDetail" />

            <ListView
                android:id="@+id/lstItinerari"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtTitleItinerari" />

            <TextView
                android:id="@+id/txtTitleMaps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/lexendex_light"
                android:text="Mapa"
                android:textColor="@color/lapis_lazuli"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lstItinerari" />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="12dp"
                app:layout_constraintTop_toBottomOf="@id/txtTitleMaps"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <fragment
                    android:id="@+id/FgrMaps"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:name="com.example.politravel_mariomolina.MapsFragment" />
            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
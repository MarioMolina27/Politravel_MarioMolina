<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            card_view:cardCornerRadius="18dp"
            card_view:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/grey_white">
                        <LinearLayout
                            android:id="@+id/infoItem"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtNomPaquet"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="30dp"
                                    android:text="TITOL PAQUET"
                                    android:fontFamily="@font/mplus1p_bold"
                                    android:textColor="@color/lapis_lazuli"
                                    android:textSize="24dp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginBottom="30dp"
                                    android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/txtTransport"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="30dp"
                                            android:textColor="@color/lapis_lazuli"
                                            android:fontFamily="@font/mplus1p_regular"
                                            android:textSize="18dp"
                                            android:text="Transport" />
                                        <TextView
                                            android:id="@+id/txtDuracio"
                                            android:textColor="@color/lapis_lazuli"
                                            android:fontFamily="@font/mplus1p_regular"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="5 dies"
                                            android:textSize="18dp"/>
                                </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.9"
                            android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/imgPaquetDetail"
                                    android:layout_width="match_parent"
                                    android:scaleType="fitXY"
                                    android:layout_height="180dp"
                                    android:src="@drawable/ic_launcher_background" />
                        </LinearLayout>
                </LinearLayout>
        </androidx.cardview.widget.CardView>
</LinearLayout>